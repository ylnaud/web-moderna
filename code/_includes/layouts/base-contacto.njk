<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>{{ title }}</title>
    <link rel="icon" href="/img/logo.png"/>
    <meta name="description" content="{{ descripcion }}"/> {% set css %}
    {% include "normalize.css" %}
    {% include "styles.css" %}
    {% endset %}
    <!-- feed it through our cssmin filter to minify -->
    <style>
      {{css | cssmin | safe}}</style>
  </head>
  <body>
    <header>{% include "nav.njk" %}</header>
    <main class="container">{{ content | safe }}</main>
    {% include "footer.njk" %}
    <!-- capture the JS content as a Nunjucks variable -->
    {% set js %}
    {% include "app.js" %}
    {% endset %}
    <!-- feed it through our jsmin filter to minify -->
    <script>
      {{ js | jsmin | safe }}</script>
  </body>
</html>